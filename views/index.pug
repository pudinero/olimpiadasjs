html
  head
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= "Página principal"
    link(rel="stylesheet" type="text/css" media="screen" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.5/css/bulma.css")
  body
    section(class="hero is-bold is-light is-fullheight")
      div(class="hero-body")
        div(class="container")
          h1(class="title")= formTitle
          form(action="auth", method="post")
            div(class="field is-horizontal is-grouped")
              div(class="field-body")
                div(class="field")
                  p(class="control has-icons-left")
                    input(class="input", type="text", name="username", placeholder="Usuario")
                    span(class="icon is-small is-left")
                      i(class="fas fa-user")
                div(class="field")
                  p(class="control has-icons-left")
                    input(class="input", type="password", name="psw", placeholder="Contraseña")
                    span(class="icon is-small is-left")
                      i(class="fas fa-envelope")
            div(class="field is-horizontal")
              div(class="field-body")
                div(class="field is-grouped is-grouped-right")
                  div(clas="control")
                    button(class="button" id="btnIngresar" type="submit")= 'Ingresar'